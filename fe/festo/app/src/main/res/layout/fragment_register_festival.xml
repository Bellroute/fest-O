<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="7dp"
    tools:context="com.nowusee.festo.host_ui.no_festival.RegisterFestivalFragment">

    <LinearLayout
        android:id="@+id/goCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp">

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반 사용자로 돌아가기"
            android:textColor="@color/festO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="축제등록"
            android:textStyle="bold"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="축제 이름"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_festival_name"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginStart="65dp"
                android:hint="축제 이름"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="축제 설명"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_festival_description"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginStart="65dp"
                android:hint="축제 설명"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="축제 운영 기간"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/tv_festivalperiod"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="#75DFDFDF" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="축제장소"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_map" />

            <EditText
                android:id="@+id/et_festival_location"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:hint="축제 장소"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="축제 대표 이미지"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_festivalImage"
                android:layout_width="250dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:src="@drawable/add_menu_img" />

        </LinearLayout>

        <Button
            android:id="@+id/registerFestival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="축제 등록" />
    </LinearLayout>

</FrameLayout>