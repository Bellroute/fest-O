<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="7dp"
    tools:context="com.example.festo.host_ui.no_festival.RegisterFestivalFragment">

    <LinearLayout
        android:id="@+id/goCustomer"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반 사용자로 돌아가기"
            android:textColor="@color/festO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="축제등록"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="축제 이름"
                android:textColor="#F44336"
                android:textSize="20sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:hint="축제 이름"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="담당자 이름"
                android:textColor="#F44336"
                android:textSize="20sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="65dp"
                android:hint="담당자 이름"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="축제 운영 기간"
                android:textColor="#F44336"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/tv_festivalperiod"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="#DFDFDF" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="축제장소"
                android:textColor="#F44336"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_map" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:hint="축제 장소"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="축제 대표 이미지"
                android:textColor="#F44336"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_festivalImage"
                android:layout_width="250dp"
                android:layout_height="170dp"
                android:layout_gravity="center"

                android:src="@drawable/logo1" />

        </LinearLayout>

        <Button
            android:id="@+id/registerFestival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="축제 등록" />
    </LinearLayout>

</FrameLayout>